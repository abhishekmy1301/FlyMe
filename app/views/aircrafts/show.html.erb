<div class="d-flex flex-column bg-light py-2 border border-dark shadow-lg" style="margin: 20px 250px;">
  <br>
  <div class="p-2 d-flex justify-content-center">
    <h2>Aircraft Model: <%= @aircraft.model %></h2>
  </div>
  <div class="p-5 d-flex justify-content-center">
    <img  src=<%=@aircraft.picture_url%> height="300px" class="py-3">
    <div class="p-4 d-flex flex-column justify-content-center">
      <h5><%= @aircraft.description %></h5>
      <br>
      <h5>Capacity: <%= @aircraft.capacity %></h5>
      <h5> Rate per hour: $<%= @aircraft.price.round.to_fs(:delimited) %></h5>
      <br>
      <p>
        Owned By: <%= @aircraft.user.email %>
        <% if current_user == @aircraft.user %>
        (You)
        <% end %>
      </p>
      <div class="container">
          <div class="row align-items-center justify-content-between">
            <% if user_signed_in? %>
              <div class="col">
                <%= link_to "Add Booking", new_aircraft_booking_path(@aircraft), class: "button-35", style:"color: green;"%>
              </div>
              <% if current_user == @aircraft.user %>
                <div class="col">
                 <%= link_to "Edit", edit_aircraft_path(@aircraft), class: "button-35", style:"color: orange;"%>
                </div>
                <div class="col">
                  <%= link_to "Remove", aircraft_path(@aircraft),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "button-35", style:"color: red;"
                  %>
                </div>
              <% end %>
            <% end %>
            <div class="col">
              <%= link_to "Back to all aircrafts", aircrafts_path, class: "button-35" %>
            </div>
          </div>
      </div>
    </div>
  </div>

</div>
