<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://businessaircraft.bombardier.com/sites/default/files/styles/interactive_visualization_tool_retina_3200_desktop/public/ivt/hotspots/backgrounds/2022-02/DDBA0713_FamilyTarmacOrlando2021_V10_6ac_4800X2512.jpg?itok=-MmrClGb);">
  <%= render "shared/navbar" %>
  <div class="landing-stats container d-flex justify-content-around align-items-center">
    <div class="p-2 flex-column text-center">
        <h1 class="h1-text-large">Global</h1>
        <h2>FLEET</h2>
    </div>
    <div class="p-2 flex-column text-center">
      <h1 class="h1-text-large"><%= @aircrafts.count %></h1>
      <h2>AIRCRAFTS</h2>
    </div>
    <div class="p-2 flex-column text-center">
      <h1 class="h1-text-large"><%= @bookings.count %></h1>
      <h2>BOOKINGS</h2>
    </div>
  </div>
</div>

<div class="container index mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Range of aircrafts <%= link_to "+", new_aircraft_path, class: "ms-3 text-success text-decoration-none" %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @aircrafts.count %> aircrafts out of our <%= Aircraft.count %> on our website.</p>
      <% else %>
        <p>Select an aircraft</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @aircrafts.each do |aircraft| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= aircraft.picture_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= aircraft.model %></h4>
            </div>
            <p><%= aircraft.description %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= aircraft.capacity %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= aircraft.price %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "Add Booking", new_aircraft_booking_path(aircraft), class: "ms-3 text-success text-decoration-none" %>
            <%= link_to "View", aircraft_path(aircraft), class: "ms-3 text-primary" %>
            <%= link_to "Edit", edit_aircraft_path(aircraft), class: "ms-3 text-warning" %>
            <%= link_to "Remove", aircraft_path(aircraft),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger"
            %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
