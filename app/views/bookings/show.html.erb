<div class="text-center bg-light py-2 border border-dark shadow-lg p-3 mb-5 bg-white rounded">
  <h1>Aircraft Model: <%= @booking.aircraft.model %></h1>
  <img  src=<%=@booking.aircraft.picture_url%> height="300px" class="py-3">
  <h2>Departure Time: <%= @booking.departure_time %></h2>
  <div class="path" data-takeoff=<%= @booking.takeoff.upcase %> data-landing=<%= @booking.landing.upcase %>>
    <h2><%= "#{@booking.takeoff.upcase} âœˆ #{@booking.landing.upcase}"%></h2>
  </div>

  <div class="flat-card-actions">
    <%= link_to "Edit", edit_booking_path(@booking), class: "ms-3 text-warning" %>
    <%= link_to "Remove", booking_path(@booking),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "ms-3 text-danger"
    %>

    <%= link_to "Back to all bookings", bookings_path, class: "ms-3 text-primary" %>
    <%= link_to "Show/Hide Map", "#", class: "ms-3 text-warning" %>
  </div>
  <div id="map" style="height: 300px; width: 600px">
            <!-- Display the map in this div -->
  </div>
</div>
